<div class="container text-center">
  <h1>Rooms</h1>
</div>
<div class="row">
  {{#each rooms}}
  <div class="col-4">
    <div class="card d-inline-block" style="width: 18rem;">
      <img src="/images/{{image}}" class="card-img-top" alt="">
      <div class="card-body">
        <h5 class="card-title">{{name}}</h5>
        <p class="card-text">{{description}}</p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Price: {{price}}</li>
      </ul>
      <div class="card-body">
        {{#if ../userId}}
       <a href="/reservation?roomId={{_id}}" class="btn btn-dark">Select this room {{userId}}</a>
        {{else}}
        <a href="/login?roomId={{_id}}" class="btn btn-dark">Select this room</a>
        {{/if}}
      </div>
    </div>
  </div>
  {{/each}}
</div>