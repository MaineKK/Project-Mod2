<div class="container">
 <form method="POST" action="/reservation">
  <div class="row">
    <div class="col-md-6">
      <h3>Detalles de la Reserva</h3>
      <p>Fecha de Check-In: {{checkInDate}}</p>
      <p>Fecha de Check-Out: {{checkOutDate}}</p>
      <p>Habitación: {{room.name}}</p>
      <p>Precio de la Habitación: {{room.price}}</p>
    </div>
    <div class="col-md-6">
      <h3>Datos del Usuario</h3>
      <p>Nombre: {{user.name}}</p>
      <p>Correo Electrónico: {{user.email}}</p>
      <p>Teléfono: {{user.phone}}</p>
    </div>
  </div>

  <div class="mt-4">
    <h3>Total a Pagar: {{ price }}</h3>
  </div>
  <div class="mt-4">
    <a href="/confirmation" class="btn btn-primary">Confirmar Reserva</a>
  </div>
</div>
</form>
